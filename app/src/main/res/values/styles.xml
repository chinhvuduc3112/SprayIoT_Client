<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/textIcons</item>
        <item name="colorControlActivated">@color/textIcons</item>
        <item name="colorControlHighlight">@color/textIcons</item>
        <item name="android:textColorHint">@color/textIcons</item>

        <item name="colorButtonNormal">@color/primaryDark</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/textIcons</item>
        <item name="android:textColorPrimary">@color/textIcons</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/textIcons</item>
        <!--<item name="visible" type="id"/>-->
        <!--<item name="masked" type="id"/>-->
        <item name="android:background">@drawable/selector_color_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
    </style>

    <style name="ButtonCancelStyle">
        <item name="android:textColor">@color/textIcons</item>
        <item name="android:background">@drawable/selector_color_btn_cancel</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/accent</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/accent</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/textSecondary</item>
    </style>

</resources>