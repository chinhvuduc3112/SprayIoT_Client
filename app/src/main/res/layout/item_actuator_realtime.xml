<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:elevation="1dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small">

        <TextView
            android:id="@+id/txt_actuator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên thiết bị vux duc chinh"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/txt_actuator_time"
            android:textSize="@dimen/txt_medium"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_actuator_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:00"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/switch_actuator_realtime"
            android:layout_marginRight="@dimen/margin_medium"
            android:textSize="@dimen/txt_medium"
            android:textColor="#4CAF50"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_actuator_realtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_options"
            android:layout_marginRight="@dimen/margin_big"
            android:layout_centerVertical="true"
            android:checked="true"
            android:layout_gravity="right"
            style="@style/MySwitch"/>

        <ImageView
            android:id="@+id/img_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            android:src="@drawable/ic_more_vert_grey_500_24dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>