<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:elevation="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium">

        <TextView
            android:id="@+id/txt_condition_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="Điều kiện"
            android:textSize="@dimen/txt_medium"
            android:textColor="@color/navigationBar"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_device_node_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_condition_name"
            android:layout_toRightOf="@id/img_options"
            android:layout_below="@+id/txt_condition_name"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Thông tin cơ bản về node"
            android:textSize="@dimen/txt_small_medium"/>

        <TextView
            android:id="@+id/txt_compare_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="<"
            android:textColor="@color/primary"
            android:textSize="@dimen/txt_largest"
            android:layout_toLeftOf="@id/txt_compare_value"
            android:layout_toRightOf="@id/txt_device_node_name"
            android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_compare_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="18sp"
            android:textColor="@color/accent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>